<h1>Payment Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= ('%.4f' % (@apr*100)) + '%' %>
  </dd>

  <dt>Number of years</dt>
  <dd>
    <%= @years %>
  </dd>

  <dt>Principal</dt>
  <dd>
    <%= @principal_as_curr %>
  </dd>

  <dt>Payment</dt>
  <dd>
    <%= @payment_as_curr %>
  </dd>
</dl>

